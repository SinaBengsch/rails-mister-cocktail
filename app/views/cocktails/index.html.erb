<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.4)), url('<%= image_path 'banner1.jpg' %>');">
  <div class="container-basic">
    <h1>Share your recipe</h1>
    <p>Find the right cocktail for your next party</p>
    <a href="#" class="btn-pink">Add recipe</a>
<!--     <div class="btn-pink"><#%= link_to "Add cocktail recipe", new_cocktail_path%></div>
 -->
  </div>
</div>

<br>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'random.jpg' %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>

          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
