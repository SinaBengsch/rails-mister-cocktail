<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.2)), url('<%= image_path 'banner1.jpg' %>');">
  <div class="container-home">
    <h1>Share your recipe</h1>
    <p>Find the perfect cocktail for your next party.</p>
    <%= link_to "Add recipe", new_cocktail_path, class: "btn-pink"%>
  </div>
</div>

<br>
<div class="container-home">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
       <img src="https://picsum.photos/id/56/2880/1920" alt="placeholder">
        <div class="card-description">
          <div class="card-title">
            <h2><%= cocktail.name %></h2>
            <i class="far fa-clock"> <%= cocktail.prep_time %> (min)</i>
          </div>
          <p><%= cocktail.description %></p>
        </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
      </div>
    <% end %>
  </div>
</div>
