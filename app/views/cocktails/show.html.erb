<div class="container-basic">
  <div class="card-big">
    <img src="https://picsum.photos/id/1080/200/300" alt="cocktail">
   <!-- app/views/articles/index.html.erb -->
    <%#= cl_image_tag("kabmhsgjinxfuyirknct",
        width: 400, height: 300, crop: :fill) %>

    <div class="cocktail-content">
      <h2><%= @cocktail.name.upcase %></h2>

      <div class="icons">
        <% if @cocktail.alcohol == true %>
          <i class="fas fa-percent"></i>
        <% end %>

        <div class="icons-time">
          <i class="far fa-clock"> <%= @cocktail.prep_time %> (min)</i>
        </div>
      </div>

      <div class="cocktail-content-sections">
        <p>DESCRIPTION</p>
        <%= @cocktail.description %>
      </div>

      <div class="cocktail-content-sections">
        <p>INGREDIENTS</p>
          <% @cocktail.doses.each do |dose| %>
                      <li>
                        <td><%= dose.description %></td>
                        <td><%= dose.ingredient.name %></td>
                        <td>
                          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                            <i class="fa fa-trash destroy_dose"></i>
                          <% end %>
                        </td>
                      </li>
                    <% end %>
      </div>

      <div class="cocktail-content-sections">
        <p>INSTRUCTION</p>
        <%= @cocktail.instruction %>
      </div>

      <div class="btn-next-to-each-other">
        <%= link_to '+ Add ingredient', new_cocktail_dose_path(@cocktail), class:"btn-pink" %>
        <%= link_to '< Back to overview', cocktails_path, class:"btn-pink-outline" %>
      </div>
    </div>
  </div>
</div>
