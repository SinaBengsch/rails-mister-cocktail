
<%= simple_form_for(cocktail) do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :instruction %>
    <%= f.input :prep_time, collection: 10..30, selected: 10, hint: '(min)' %>
    <%= f.input :alcohol %>
  </div>

  <div class="btn-next-to-each-other">
    <%= f.button :submit, class:"btn-pink" %>
    <%= link_to '< Back to overview', cocktails_path, class:"btn-pink-outline"  %>
  </div>
<% end %>
